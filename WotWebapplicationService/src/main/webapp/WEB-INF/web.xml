<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WoT Console WN8</display-name>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude>/WEB-INF/header.jspf</include-prelude>
			<include-coda>/WEB-INF/footer.jspf</include-coda>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
			<default-content-type>text/html</default-content-type>
		</jsp-property-group>
	</jsp-config> 
	<context-param>
		<param-name>resources</param-name>
		<param-value>resources/</param-value>
	</context-param>
	<servlet>
		<servlet-name>WN8Servlet</servlet-name>
		<servlet-class>org.krugdev.WN8Servlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PlayerServlet</servlet-name>
		<servlet-class>org.krugdev.PlayerServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PlayerTanksServlet</servlet-name>
		<servlet-class>org.krugdev.PlayerTanksServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>SessionWN8Servlet</servlet-name>
		<servlet-class>org.krugdev.SessionWN8Servlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>WN8Servlet</servlet-name>
		<url-pattern>/wn8</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>PlayerServlet</servlet-name>
		<url-pattern>/player_page</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlayerTanksServlet</servlet-name>
		<url-pattern>/player_tanks</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SessionWN8Servlet</servlet-name>
		<url-pattern>/session_wn8</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>720</session-timeout>
		<cookie-config>
			<http-only>true</http-only>
		</cookie-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
</web-app>
